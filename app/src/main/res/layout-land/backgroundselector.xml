<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundselector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/black"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.calculatoras.backgroundselector">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/first_row"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <Button
            android:layout_width="match_parent"
            android:text="Autumn"
            android:background="@drawable/autumn1"
            android:id="@+id/autumn_btn"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="match_parent"
            android:text="Home On The Range"
            android:background="@drawable/homeontherange"
            android:id="@+id/homeontherange_btn"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/second_row"
        android:layout_below="@+id/first_row"
        android:layout_height="50dp">
        <Button
            android:layout_width="match_parent"
            android:text="Underwater"
            android:background="@drawable/underwater"
            android:id="@+id/underwater_btn"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="match_parent"
            android:id="@+id/sunflower_btn"
            android:background="@drawable/sunflowerfields"
            android:text="Sunflower Fields"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/third_row"
        android:layout_below="@+id/second_row"
        android:layout_height="50dp">
        <Button
            android:layout_width="match_parent"
            android:text="Galaxy"
            android:background="@drawable/galaxy"
            android:id="@+id/galaxy_btn"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="match_parent"
            android:text="City View"
            android:id="@+id/cityview_btn"
            android:background="@drawable/city360"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/fourth_row"
        android:layout_below="@+id/third_row"
        android:layout_height="50dp">
        <Button
            android:layout_width="match_parent"
            android:text="Headless Horseman"
            android:background="@drawable/headhorseman"
            android:id="@+id/headlesshorseman_btn"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="match_parent"
            android:text="Santa's Journey"
            android:background="@drawable/santasjournery"
            android:id="@+id/santasjourney_btn"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/fifth_row"
        android:layout_below="@+id/fourth_row"
        android:layout_height="50dp">
        <Button
            android:layout_width="match_parent"
            android:text="Lonely Road"
            android:background="@drawable/lonelyroad"
            android:id="@+id/lonelyroad_btn"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="match_parent"
            android:text="Narnia"
            android:background="@drawable/narnia"
            android:id="@+id/narnia_btn"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/sixth_row"
        android:layout_below="@+id/fifth_row"
        android:layout_height="50dp">
        <Button
            android:layout_width="match_parent"
            android:text="Route 66"
            android:background="@drawable/route66"
            android:id="@+id/route66_btn"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="match_parent"
            android:text="Waters"
            android:background="@drawable/waters"
            android:id="@+id/waters_btn"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>
