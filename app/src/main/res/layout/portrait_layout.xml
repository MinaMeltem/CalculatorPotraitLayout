<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingRight="15dp"
        android:textSize="60sp"
        android:gravity="center|end"
        android:background="@android:color/background_light" />

    <LinearLayout
        android:id="@+id/lower_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LL_Rightcontainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/first_column"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical">

                <Button
                    android:id="@+id/but_7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_dark"
                    android:text="@string/seven_button"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/but_4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_dark"
                    android:text="@string/four_button"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/but_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_dark"
                    android:text="@string/one_button"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/but_dot"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_dark"
                    android:text="@string/dot"
                    android:textColor="#ffff"
                    android:textSize="40sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_column"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical">

                <Button
                    android:id="@+id/but_8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_dark"
                    android:text="@string/eight_button"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/but_5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_dark"
                    android:text="@string/five_button"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/but_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_dark"
                    android:text="@string/two_button"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/but_0"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_dark"
                    android:text="@string/zero_button"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/third_column"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical">


                <Button
                    android:id="@+id/but_9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_dark"
                    android:text="@string/nine_button"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/but_6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_dark"
                    android:text="@string/six_button"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/but_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_dark"
                    android:text="@string/three_button"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/but_equal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_dark"
                    android:text="@string/equals"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/forth_column"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical">

                <Button
                    android:id="@+id/but_del"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_light"
                    android:text="@string/clear"
                    android:textColor="#ffff"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/but_div"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_light"
                    android:text="@string/division"
                    android:textColor="#ffff"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/but_multi"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_light"
                    android:text="@string/multiplication"
                    android:textColor="#ffff"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/but_subt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_light"
                    android:text="@string/subtraction"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/but_add"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_highlight_light"
                    android:text="@string/addition"
                    android:textColor="#ffff"
                    android:textSize="15sp"
                    android:textStyle="italic" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_leftline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>


</LinearLayout>